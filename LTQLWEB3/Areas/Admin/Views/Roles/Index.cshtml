@model IEnumerable<LTQLWEB3.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="header">
    <ol class="breadcrumb">
        <li><a href="#">Trang chủ</a></li>
        <li><a href="#">Vai trò</a></li>
        <li class="active">Danh sách vai trò</li>
    </ol>
</div>

    @Html.ActionLink("Thêm mới", "Create")

<div class="table-responsive">
    <table class="table table-bordered">
        <tr>
            <th>
               @Html.DisplayNameFor(model => model.TenVaiTro)
            </th>
            <th> Chức năng</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenVaiTro)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaVaiTro }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaVaiTro })
                </td>
            </tr>
        }

    </table>
</div>