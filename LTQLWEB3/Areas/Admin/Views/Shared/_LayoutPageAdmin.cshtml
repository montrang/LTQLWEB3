<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewBag.Title</title>
    <!-- Bootstrap Styles-->
    <link href="~/Areas/Admin/Content/Layout/bootstrap.css" rel="stylesheet" />
    <!-- FontAwesome Styles-->
    <link href="~/Areas/Admin/Content/Layout/font-awesome.css" rel="stylesheet" />
    <!-- Morris Chart Styles-->
    <link href="~/Areas/Admin/Content/Layout/morris-0.4.3.min.css" rel="stylesheet" />
    <!-- Custom Styles-->
    <link href="~/Areas/Admin/Content/Layout/custom-styles.css" rel="stylesheet" />
    <!-- Google Fonts-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
    <link href="~/Areas/Admin/Content/Layout/cssCharts.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/Layout/base.css" rel="stylesheet" />
</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><strong>Trang chủ</strong></a>

                
            </div>

            <ul class="nav navbar-top-links navbar-right">
                <!-- /.dropdown -->
                <li class="dropdown">

                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">
                        @if (Session["TenNV"].ToString() != "")
                        {
                            <i>@Session["TenNV"].ToString()</i>
                        }
                        <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="#">Xem thông tin</a>
                        </li>
                        <li>
                            <a href="#">Sửa thông tin</a>
                        </li>
                        <li>@Html.ActionLink("Đăng xuất", "Logout", "QuanLy")</li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <li></li>
                <!-- /.dropdown -->
            </ul>
        </nav>
        <!--/. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">


                    <li>@Html.ActionLink("Quản lý nhân viên", "Index", "NHANVIENs")</li>

                    <li>@Html.ActionLink("Quản lý tài khoản", "Index", "accounts")</li>

                    <li>@Html.ActionLink("Quản lý vai trò", "Index", "Roles")</li>

                    <li>@Html.ActionLink("Quản lý khách hàng", "Index", "KHACHHANGs")</li>

                    <li>@Html.ActionLink("Quản lý nhóm sản phẩm", "Index", "NHOMSPs")</li>

                    <li>@Html.ActionLink("Quản lý sản phẩm", "Index", "SANPHAMs")</li>

                    <li>@Html.ActionLink("Quản lý hóa đơn", "Index", "")</li>
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->

        <div id="page-wrapper">
            @RenderBody()
            <hr />
            <footer>

                <p>Copyright © 2020. Crafted with by Ngan</p>
            </footer>
        </div>

    </div>
    <!-- /. WRAPPER  -->
    <!-- JS Scripts-->
    <!-- jQuery Js -->
    <script src="~/Areas/Admin/Scripts/Layout/jquery-1.10.2.js"></script>
    <!-- Bootstrap Js -->
    <script src="~/Areas/Admin/Scripts/Layout/bootstrap.min.js"></script>
    <!-- Metis Menu Js -->
    <script src="~/Areas/Admin/Scripts/Layout/jquery.metisMenu.js"></script>
    <!-- Morris Chart Js -->
    <script src="~/Areas/Admin/Scripts/Layout/raphael-2.1.0.min.js"></script>
    <script src="~/Areas/Admin/Scripts/Layout/morris.js"></script>

    <script src="~/Areas/Admin/Scripts/Layout/easypiechart.js"></script>
    <script src="~/Areas/Admin/Scripts/Layout/easypiechart-data.js"></script>

    <script src="~/Areas/Admin/Scripts/Layout/jquery.chart.js"></script>

    <!-- Custom Js -->
    <script src="~/Areas/Admin/Scripts/Layout/custom-scripts.js"></script>

</body>

</html>
