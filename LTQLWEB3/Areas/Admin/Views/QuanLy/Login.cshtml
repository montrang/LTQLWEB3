@model LTQLWEB3.Models.account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - Bizentro</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/img/favicon.ico" />
    <link href="~/Areas/Admin/Content/login/animate.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/login/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/login/hamburgers.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/login/main.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/login/select2.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/login/util.css" rel="stylesheet" />
</head>
<body>
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-pic js-tilt" data-tilt>
                        <img src="~/Areas/Admin/Image/login.png" alt="IMG" />
                    </div>
                    @using (Html.BeginForm("Login", "QuanLy", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                <form class="login100-form validate-form">
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="User name is required">
                        @Html.EditorFor(model => model.MaTk, new { htmlAttributes = new { @class = "input100", @placeholder = "User name" } })
                        @*<input class="input100" type="text" name="form-username" placeholder="User name" id="form-username">*@
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input100", @type = "password", @placeholder = "Password" } })
                        @*<input class="input100" type="password" name="form-password" placeholder="Password" id="form-password">*@
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="text-danger text-center">@ViewBag.Error</div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn" id="btnDangNhap">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="#">
                            Create your Account
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
                    }
                </div>
            </div>
        </div>




    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Script/login/jquery-3.2.1.min.js"></script>
    <script src="~/Areas/Admin/Script/login/popper.js"></script>
    <script src="~/Areas/Admin/Script/login/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Script/login/select2.min.js"></script>
    <script src="~/Areas/Admin/Script/login/tilt.jquery.min.js"></script>
    <!--===============================================================================================-->
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/Areas/Admin/Script/login/main.js"></script>
    <!--===============================================================================================-->
</body>
</html>
