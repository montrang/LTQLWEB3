@model LTQLWEB3.Models.KHACHHANG
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đăng nhập</h2>
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(m => m.Email, "Email: ")
        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Nhập email", @class = "form-control" })
    </div>
    <div>
        @Html.LabelFor(m => m.PassWord, "PassWord: ")
        @Html.PasswordFor(m => m.PassWord, new { @placeholder = "Nhập password", @class = "form-control" })
    </div>
    <input type="submit" value="Đăng nhập" />
}
